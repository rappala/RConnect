<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01_detail_electronics"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    android:scrollbars="none">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"

        >

        <!--android:background="@drawable/background"-->

        <!--<LinearLayout-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:orientation="horizontal">-->


        <!--</LinearLayout>-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">


            <!--Title-->


            <!--<TextView-->
            <!--android:id="@+id/TitleField_detail_electronics"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_below="@+id/image_detail_electronics"-->
            <!--android:padding="3.5dp"-->
            <!--android:text="Title:    "-->
            <!--android:textSize="13dp"-->
            <!--android:textStyle="bold" />-->

            <TextView
                android:id="@+id/Title_detail_electronics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"

                android:padding="3.5dp"
                android:textSize="12dp"
                android:textStyle="bold"
                android:typeface="monospace" />

            <!--Item Color-->

            <!--<TextView-->
            <!--android:id="@+id/ItemColorField_detail_electronics"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignLeft="@+id/TitleField_detail_electronics"-->
            <!--android:layout_below="@+id/ModelNumber_detail_electronics"-->
            <!--android:layout_marginTop="8dp"-->
            <!--android:text="ItemColor_detail_electronics"-->
            <!--android:textSize="13dp"-->
            <!--android:textStyle="bold" />-->

            <TextView
                android:id="@+id/ItemColor_detail_electronics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Title_detail_electronics"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="5dp"

                android:textSize="13dp"
                android:typeface="monospace" />

            <!--Image-->


            <ImageView
                android:id="@+id/share_image_detail_electronics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ItemColor_detail_electronics"
                android:src="@drawable/ic_share_black_24dp"
                android:layout_marginLeft="270dp"
                android:scaleType="fitXY" />


            <ImageView
                android:id="@+id/image_detail_electronics"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_below="@+id/share_image_detail_electronics"
                android:layout_margin="30dp"
                android:padding="5dp"
                android:scaleType="fitXY"
                android:src="@mipmap/nav_banner" />

            <LinearLayout
                android:id="@+id/image_detail_electronics_group_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/image_detail_electronics"
                android:layout_alignLeft="@+id/image_detail_electronics"
                android:layout_alignRight="@+id/image_detail_electronics"
                android:layout_alignStart="@+id/image_detail_electronics"
                android:layout_below="@+id/image_detail_electronics"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_detail_electronics_image1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/ItemColor_detail_electronics"
                    android:layout_margin="2dp"
                    android:padding="2dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/nav_banner" />

                <ImageView
                    android:id="@+id/image_detail_electronics_image2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/ItemColor_detail_electronics"
                    android:layout_margin="2dp"
                    android:padding="2dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/nav_banner" />

                <ImageView
                    android:id="@+id/image_detail_electronics_image3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/ItemColor_detail_electronics"
                    android:layout_margin="2dp"
                    android:padding="2dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/nav_banner" />

                <ImageView
                    android:id="@+id/image_detail_electronics_image4"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/ItemColor_detail_electronics"
                    android:layout_margin="2dp"
                    android:padding="2dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/nav_banner" />

                <ImageView
                    android:id="@+id/image_detail_electronics_image5"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/ItemColor_detail_electronics"
                    android:layout_margin="2dp"
                    android:padding="2dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/nav_banner" />

                <ImageView
                    android:id="@+id/youtube_image_detail_electronics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ItemColor_detail_electronics"
                    android:layout_marginLeft="50dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/youtubeimage" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/price_rating_detail_electronics_group_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image_detail_electronics_group_layout"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"

                android:orientation="horizontal">


                <RelativeLayout
                    android:id="@+id/price_detail_electronics_group_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <!--Sale Price-->

                    <TextView
                        android:id="@+id/SalePriceField_detail_electronics"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Best Price: $."
                        android:textSize="13dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/SalePrice_detail_electronics"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_toRightOf="@id/SalePriceField_detail_electronics"
                        android:textSize="13dp"
                        android:typeface="monospace" />


                    <!--Maximum Selling Retail Price-->

                    <TextView
                        android:id="@+id/MSRPField_detail_electronics"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/SalePrice_detail_electronics"
                        android:layout_marginTop="8dp"
                        android:text="MSRP: $"
                        android:textSize="13dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/MSRP_detail_electronics"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/MSRPField_detail_electronics"
                        android:layout_marginTop="8dp"
                        android:textSize="13dp"
                        android:typeface="monospace" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rating_detail_electronics_group_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <!--Customer Rating-->


                    <TextView
                        android:id="@+id/CustomerRatingField_detail_electronics"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Customer Rating"
                        android:textSize="13dp"
                        android:textStyle="bold" />

                    <RatingBar
                        android:id="@+id/CustomerRating_detail_electronics"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/CustomerRatingField_detail_electronics"
                        android:layout_marginTop="8dp"
                        android:numStars="5"
                        android:stepSize="0.1" />


                </RelativeLayout>

            </LinearLayout>


            <TextView
                android:id="@+id/General_Details_detail_electronics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/price_rating_detail_electronics_group_layout"
                android:layout_marginTop="20dp"
                android:text="General Details"
                android:textSize="18dp"
                android:layout_marginLeft="5dp"

                android:textStyle="bold" />


            <TableLayout
                android:id="@+id/general_details_table_detail_electronics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/General_Details_detail_electronics"
                android:layout_marginTop="10dp"
                android:stretchColumns="1">

                <View
                    android:layout_height="2dip"
                    android:background="#FF909090" />

                <TableRow>
                    <!--Brand Name-->

                    <TextView
                        android:id="@+id/BrandNameField_detail_electronics"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Brand Name"
                        android:layout_marginLeft="5dp"

                        android:textSize="13dp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/BrandName_detail_electronics"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="8dp"

                        android:paddingLeft="10dp"
                        android:text="Lenovosajkfhkjsdhafjksdakfksdagkhksjdhgjkdsfhkgjhgkdsfjhgjkdsfhkjghdfjkhgjkdsfhgjk"
                        android:textSize="13dp"
                        android:typeface="monospace" />
                </TableRow>

                <View
                    android:layout_height="2dip"
                    android:background="#FF909090" />


                <TableRow>

                    <!--Item Id-->

                    <TextView
                        android:id="@+id/ItemIdField_detail_electronics"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="5dp"

                        android:text="Item ID"
                        android:textSize="13dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/ItemId_detail_electronics"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="8dp"
                        android:paddingLeft="10dp"
                        android:text="Lenovosajkfhkjsdhafjksdakfksdagkhksjdhgjkdsfhkgjhgkdsfjhgjkdsfhkjghdfjkhgjkdsfhgjk"
                        android:textSize="13dp"
                        android:typeface="monospace" />

                </TableRow>

                <View
                    android:layout_height="2dip"
                    android:background="#FF909090" />

                <TableRow>
                    <!--Model Number-->

                    <TextView
                        android:id="@+id/ModelNumberField_detail_electronics"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Model Number"
                        android:layout_marginLeft="5dp"

                        android:textSize="13dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/ModelNumber_detail_electronics"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="8dp"
                        android:paddingLeft="10dp"
                        android:text="Lenovosajkfhkjsdhafjksdakfksdagkhksjdhgjkdsfhkgjhgkdsfjhgjkdsfhkjghdfjkhgjkdsfhgjk"
                        android:textSize="13dp"
                        android:typeface="monospace" />
                </TableRow>

                <View
                    android:layout_height="2dip"
                    android:background="#FF909090" />

                <TableRow>

                    <!--Item Availability-->

                    <TextView
                        android:id="@+id/ItemAvailabilityField_detail_electronics"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Item Availability"
                        android:layout_marginLeft="5dp"

                        android:textSize="13dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/ItemAvailability_detail_electronics"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="8dp"
                        android:paddingLeft="10dp"
                        android:text="Lenovosajkfhkjsdhafjksdakfksdagkhksjdhgjkdsfhkgjhgkdsfjhgjkdsfhkjghdfjkhgjkdsfhgjk"
                        android:textSize="13dp"
                        android:typeface="monospace" />
                </TableRow>

                <View
                    android:layout_height="2dip"
                    android:background="#FF909090" />

                <TableRow>
                    <!--Maximum Items in Order-->


                    <TextView
                        android:id="@+id/MaximumItemsPerOrderField_detail_electronics"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="5dp"

                        android:text="Maximum Items Per Order"
                        android:textSize="13dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/MaximumItemsPerOrder_detail_electronics"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="8dp"
                        android:paddingLeft="10dp"
                        android:text="Lenovosajkfhkjsdhafjksdakfksdagkhksjdhgjkdsfhkgjhgkdsfjhgjkdsfhkjghdfjkhgjkdsfhgjk"
                        android:textSize="13dp"
                        android:typeface="monospace" />

                </TableRow>

                <View
                    android:layout_height="2dip"
                    android:background="#FF909090" />


            </TableLayout>


            <!--Item Description-->

            <Button
                android:id="@+id/ItemDescriptionField_detail_electronics"
                android:layout_width="fill_parent"
                android:layout_height="78dp"
                android:layout_below="@+id/general_details_table_detail_electronics"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="More Features ......."
                android:background = "#64B5F6"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:gravity="center"
                android:textStyle="bold" />


            <!--<TextView-->
            <!--android:id="@+id/ItemDescription_detail_electronics"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_below="@id/ItemDescriptionField_detail_electronics"-->
            <!--android:layout_marginTop="8dp"-->
            <!--android:textSize="13dp"-->
            <!--android:typeface="monospace" />-->


        </RelativeLayout>

    </LinearLayout>

</ScrollView>
