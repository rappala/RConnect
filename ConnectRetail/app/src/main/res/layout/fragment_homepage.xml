<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_material_light"
    tools:context="com.example.venkat.connectr1.Fragment_Homepage">



    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:id="@+id/vt1"
            android:background="@color/primaryColor"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/linearlayout1"
            android:background="@color/white"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/ll1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="New Arrivals"
                    android:textSize="24dp"
                    />
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/image_view_more"
                    android:src="@drawable/ic_more_black_24dp"
                    android:layout_marginLeft="180dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_below="@id/ll1"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="200dp"

                android:id="@+id/rel1"
                >

                <ViewFlipper
                    android:id="@+id/viewFlipper1"
                    android:layout_width="fill_parent"
                    android:layout_weight="1"
                    android:padding="1dp"
                    android:layout_height="match_parent">
                </ViewFlipper>
                <ViewFlipper
                    android:id="@+id/viewFlipper2"
                    android:layout_weight="1"

                    android:padding="1dp"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent">
                </ViewFlipper>
                <ViewFlipper
                    android:id="@+id/viewFlipper3"
                    android:layout_weight="1"
                    android:padding="1dp"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent">
                </ViewFlipper>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:id="@+id/vt2"
            android:layout_below="@+id/linearlayout1"
            android:background="@color/primaryColor"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/linearlayout2"
            android:layout_below="@+id/vt2"
            android:background="@color/white"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/ll2"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:textSize="25dp"
                    android:text="Discounted Products"
                    />

            </LinearLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rel2"
                android:background="@color/white"
                android:orientation="vertical">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    >
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id = "@+id/horizontalScrollImage1"
                            android:background="#000000"
                            android:layout_margin="5dp"
                            android:padding="0.1dp"
                            android:src="@drawable/image1"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#000000"
                            android:layout_margin="5dp"
                            android:padding="0.1dp"
                            android:id = "@+id/horizontalScrollImage2"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#000000"
                            android:layout_margin="5dp"
                            android:padding="0.1dp"
                            android:id = "@+id/horizontalScrollImage3"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#000000"
                            android:layout_margin="5dp"
                            android:padding="0.1dp"
                            android:id = "@+id/horizontalScrollImage4"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="180dp"
                            android:background="#000000"
                            android:layout_margin="5dp"
                            android:padding="0.1dp"
                            android:id = "@+id/horizontalScrollImage5"
                            />
                    </LinearLayout>
                </HorizontalScrollView>


            </LinearLayout>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:id="@+id/vt3"
            android:layout_below="@+id/linearlayout2"
            android:background="@color/primaryColor"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/linearlayout3"
            android:layout_below="@+id/vt3"
            android:background="@color/white"


            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/ll3"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:textSize="25dp"
                    android:text="Top Selling Products"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:orientation="vertical">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id = "@+id/horizontalScrollImage6"
                            android:background="#000000"
                            android:layout_margin="5dp"
                            android:padding="0.1dp"
                            android:src="@drawable/image1"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#000000"
                            android:layout_margin="5dp"
                            android:padding="0.1dp"
                            android:id = "@+id/horizontalScrollImage7"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#000000"
                            android:layout_margin="5dp"
                            android:padding="0.1dp"
                            android:id = "@+id/horizontalScrollImage8"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#000000"
                            android:layout_margin="5dp"
                            android:padding="0.1dp"
                            android:id = "@+id/horizontalScrollImage9"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="180dp"
                            android:background="#000000"
                            android:layout_margin="5dp"
                            android:padding="0.1dp"
                            android:id = "@+id/horizontalScrollImage10"
                            />
                    </LinearLayout>
                </HorizontalScrollView>


            </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

</ScrollView>

